<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafit.model.dao.VideoDao">
	<!-- 전체 비디오 조회 -->
	<select id="selectAll" resultType="Video">
		SELECT *
		FROM video
	</select>

	<!-- 상세 영 조회 -->
	<select id="selectOne" parameterType="int" resultType="Video">
		SELECT *
		FROM video
		WHERE idx = #{idx}
	</select>

	<!-- 비디오 추가  -->
	<insert id="insert" parameterType="Video" keyProperty="idx" useGeneratedKeys="true">
		INSERT INTO video (videoId)
		VALUES (#{videoId})
	</insert>

	<!-- 조회수 업데이트 -->
	<update id="updateViewCnt" parameterType="int">
		UPDATE video SET viewCnt = viewCnt+1
		WHERE idx = #{idx}
	</update>

	<!-- 좋아요 수 업데이트 -->
	<update id="updateLikeCnt" parameterType="int">
		UPDATE video SET likeCnt = likeCnt+1
		WHERE idx = #{idx}
	</update>

	<!-- 비디오 삭제 -->
	<delete id="delete" parameterType="int">
		DELETE
		FROM video
		WHERE idx = #{idx}
	</delete>

	<!-- 검색 -->
	<select id="search" resultType="Video" parameterType="VideoSearchCondition">
		SELECT * FROM video <if test="mode == 1">
			WHERE title LIKE CONCAT('%', #{keyword}, '%')
		</if>
		<if
			test="mode == 2">
			WHERE part LIKE '%${keyword}%'
		</if>
	</select>
</mapper>