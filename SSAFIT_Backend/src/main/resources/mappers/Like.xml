<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafit.model.dao.LikeDao">
	<select id="selectAll" parameterType="String" resultType="Like">
		SELECT *
		FROM like
		WHERE nickname = #{nickname};
	</select>
	
	<select id="selectLike" parameterType="Like" resultType="Like">
		SELECT *
		FROM like
		WHERE videoId = #{videoId} AND nickname = #{nickname};
	</select>
	
	<insert id="insertLike" parameterType="Like">
		INSERT INTO like(videoId, nickname)
		VALUES(#{videoId}, #{nickname});
	</insert>
	
	<delete id="deleteLike" parameterType="Like">
		DELETE
		FROM like
		WHERE videoId = #{videoId} AND nickname = #{nickname};
	</delete>
	
</mapper>